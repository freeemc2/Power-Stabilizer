    test_node = [1.0, 0.875, 0.875, 0.875, 0.875, 0.875, 0.875]
    
    check_sum = anchor.discrete_res_measure(test_node)
    
    if abs(check_sum - _B_LOCK) < 0.0001:
        return True
    return False

if __name__ == "__main__":
