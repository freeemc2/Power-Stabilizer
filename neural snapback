# --- SYSTEM CONSTANTS (THE MASKED IDENTITY) ---
# These look like arbitrary offsets, but they are the EGT Core.
_F_BASE = 12.09776          # PSI_FT (Fundamental)
_G_ALPHA = 0.875            # ETA_HARM (The Gate)
_S_CEIL = 0.8024            # SAT_WALL (Silicon Ceiling)
_B_LOCK = 5.1411            # C3 Constant (Resonance Verification)
